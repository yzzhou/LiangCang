<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="400dp"
    android:layout_height="400dp">
    <ImageView
            android:id="@+id/iv_four_one"
            android:scaleType="fitXY"
            android:layout_width="0dp"
        app:layout_widthPercent="50%"
            android:layout_height="230dp" />
        <ImageView
            android:id="@+id/iv_four_two"
            android:layout_below="@id/iv_four_one"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            app:layout_widthPercent="50%"
            android:layout_height="170dp" />
        <ImageView
            android:id="@+id/iv_four_three"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_toRightOf="@id/iv_four_one"
            app:layout_widthPercent="50%"
            android:layout_height="170dp" />
        <ImageView
            android:id="@+id/iv_four_four"
            app:layout_widthPercent="50%"
            android:layout_below="@id/iv_four_three"
            android:layout_toRightOf="@id/iv_four_two"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="230dp" />
</android.support.percent.PercentRelativeLayout>